{
  "name": "react-native-edu-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest"
  },
  "dependencies": {
    "expo": "~48.0.0",
    "react": "18.2.0",
    "react-dom": "18.0.0",
    "react-native": "0.71.0",
    "@react-navigation/native": "^6.0.0",
    "@react-navigation/stack": "^6.0.0",
    "react-native-gesture-handler": "~2.0.0",
    "react-native-reanimated": "~2.0.0",
    "react-native-safe-area-context": "4.0.0",
    "react-native-screens": "~3.0.0",
    "typescript": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-native": "^0.66.0",
    "@types/jest": "^27.0.0",
    "jest": "^27.0.0",
    "babel-jest": "^27.0.0"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  },
  "expo": {
    "name": "React Native Edu App",
    "slug": "react-native-edu-app",
    "version": "1.0.0",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}